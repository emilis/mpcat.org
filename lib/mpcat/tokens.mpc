--- less -----------------------------------------------------------------------

/// Token highliting:

.ldt > pre {

    @yellow:        desaturate( lighten( yellow, 20% ), 20% );
    @green:         lighten( green, 10% );
    @cyan:          darken( cyan, 40% );
    @blue:          desaturate( lighten( blue, 20% ), 50% );
    @magenta:       lighten( magenta, 20% );
    @red:           desaturate( red, 40% );
    @orange:        #f62;
    @gray:          darken( white, 60% );

    > .mpcheader {  color:  @green; }

    > .tagOpen {    color:  @blue; }
    > .tagClose {   color:  @blue; }
    > .brackets {   color:  @cyan; }
    > .operations { color:  @gray; }
    > .syntax {     color:  @gray; }
    > .catEyes {    color:  @green; }
    > .strings {    color:  @yellow; }
    > .int,
    > .inthex,
    > .float,
    > .percent {    color:  @orange; }
    > .keywords {   color:  @red; }
}
